<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Admin</title>
    <link rel="stylesheet" href="css/ustyles.css">
    <link rel="stylesheet" href="css/admin.css">
</head>
<body>
    <header>
        <nav class="admin-nav">
            <div class="nav-brand">
                <h1>Admin Panel</h1>
            </div>
            <div class="nav-links">
                <a href="/dashboard">Back to Dashboard</a>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </nav>
    </header>

    <main class="admin-container">
        <section class="admin-header">
            <h2>User Management</h2>
            <p>Total Users: <strong><%= users.length %></strong></p>
        </section>

        <div class="users-table-wrapper">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Verified</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.email %></td>
                            <td>
                                <span class="badge <%= user.isVerified ? 'verified' : 'unverified' %>">
                                    <%= user.isVerified ? 'âœ“ Verified' : 'âœ— Unverified' %>
                                </span>
                            </td>
                            <td>
                                <span class="badge <%= user.role === 'admin' ? 'admin' : 'user' %>">
                                    <%= user.role === 'admin' ? 'ðŸ‘¤ Admin' : 'ðŸ‘¥ User' %>
                                </span>
                            </td>
                            <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                            <td class="actions">
                                <a href="/admin/users/<%= user._id %>" class="btn-view">View</a>
                                <button class="btn-toggle" onclick="toggleAdmin('<%= user._id %>')">
                                    <%= user.role === 'admin' ? 'Remove Admin' : 'Make Admin' %>
                                </button>
                                <button class="btn-delete" onclick="deleteUser('<%= user._id %>')">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>

    <script>
        function toggleAdmin(userId) {
            if (confirm('Toggle admin role for this user?')) {
                fetch(`/admin/users/${userId}/toggle-admin`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(err => alert('Error: ' + err.message));
            }
        }

        function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
                fetch(`/admin/users/${userId}/delete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(err => alert('Error: ' + err.message));
            }
        }
    </script>
</body>
</html>